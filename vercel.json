{
    "version": 2,
    "builds": [
      {
        "src": "api/*.php",
        "use": "@vercel/php"
      },
      {
        "src": "public/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/index.php" },
      { "src": "/(.*)", "dest": "/public/index.html" }
    ]
  }